#!/usr/bin/env bash
launcher="rofi -dmenu -p Audio"
choice=$(printf "ðŸ”Š Volume 10%%\nðŸ”Š Volume 25%%\nðŸ”Š Volume 50%%\nðŸ”Š Volume 75%%\nðŸ”Š Volume 100%%\nðŸ”‡ Toggle Mute\nðŸŽ¤ Toggle Mic Mute\nðŸŽš Open pavucontrol" | $launcher)
case "$choice" in
  "ðŸ”Š Volume 10%")  wpctl set-volume @DEFAULT_AUDIO_SINK@ 10% ;;
  "ðŸ”Š Volume 25%")  wpctl set-volume @DEFAULT_AUDIO_SINK@ 25% ;;
  "ðŸ”Š Volume 50%")  wpctl set-volume @DEFAULT_AUDIO_SINK@ 50% ;;
  "ðŸ”Š Volume 75%")  wpctl set-volume @DEFAULT_AUDIO_SINK@ 75% ;;
  "ðŸ”Š Volume 100%") wpctl set-volume @DEFAULT_AUDIO_SINK@ 100% ;;
  "ðŸ”‡ Toggle Mute") wpctl set-mute   @DEFAULT_AUDIO_SINK@ toggle ;;
  "ðŸŽ¤ Toggle Mic Mute") wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle ;;
  "ðŸŽš Open pavucontrol") pavucontrol & ;;
esac

